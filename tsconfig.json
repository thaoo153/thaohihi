{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true
  },
  "paths": {
    "api/*": "api/*",
    "assets/*": "assets/*",
    "components/*": "components/*",
    "constant/*": "constant/*",
    "contexts/*": "contexts/*",
    "hooks/*": "hooks/*",
    "icons/*": "icons/*",
    "layouts/*": "layouts/*",
    "store/*": "store/*",
    "utils/*": "utils/*"
  },
  "include": ["next-env.d.ts", "/*.ts", "/*.tsx", "src"],
  "exclude": ["node_modules"]
}